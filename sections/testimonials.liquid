{{ 'testimonials.css' | asset_url | stylesheet_tag }}
<link
  rel="stylesheet"
  href="http://kenwheeler.github.io/slick/slick/slick.css"
  type="text/css">
<link
  rel="stylesheet"
  href="http://kenwheeler.github.io/slick/slick/slick-theme.css"
  type="text/css">

  
<div style="padding-top: {{ section.settings.padding_top }}px; {{ section.settings.padding_bottom }}px">
  <div class="testimonial-container" style="background-color: #f9f9f9; ">
  {% for block in section.blocks %}
    <div class="testimonial-content">
      <div class="testimonial-img">
        {% if block.settings.testimonials_img != blank  %}
          <img src="{{ block.settings.testimonials_img | img_url: '' }}" alt="">
        {%  else %}
          <div class="placeholder">
            {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}

      </div>
      <div class="testimonial-item">
        <p class="testimonial-item__mess">
          "{{ block.settings.testimonials_fb }}"
        </p>
        <p class="testimonial-item__bottom">
          {{ block.settings.testimonials_name}} <br> {{ block.settings.testimonials_role }}
        </p>
      </div>
    </div>
  {% endfor %}
</div>
</div>

<script
  src="https://code.jquery.com/jquery-3.7.1.min.js"
  integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
  crossorigin="anonymous"></script>
<script src="http://kenwheeler.github.io/slick/slick/slick.js"></script>
<script>
  $(".testimonial-container").slick({
    slidesToShow: 1,
    slidesToScroll: 1,
    dots: false,
    arrows: false,
    autoplay: true,
    autoplaySpeed: 2000,
    responsive: [
      {
        breakpoint: 768,
        settings: {
          arrows: false,
          centerMode: true,
          centerPadding: '5px',
          slidesToShow: 1
        }
      }, {
        breakpoint: 480,
        settings: {
          arrows: false,
          centerMode: true,
          centerPadding: '5px',
          slidesToShow: 1
        }
      }
    ]
  })
</script>


{% schema %}
  {
    "name": "Testimonials",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "name": "Testimonial slider",
        "type": "testimonial-slider",
        "settings": [
          {
            "type": "image_picker",
            "id": "testimonials_img",
            
            "label": "Select testimonials image"
          }, {
            "type": "text",
            "id": "testimonials_fb",
            "default": "Customer's feedback",
            "label": "Add feedback"
          },  {
            "type": "text",
            "id": "testimonials_name",
            "default": "Customer's name",
            "label": "Name"
          }, {
            "type": "text",
            "id": "testimonials_role",
            "default": "Customer",
            "label": "Role"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Testimonials",
        "blocks": [
          {
            "type": "testimonial-slider"
          }, {
            "type": "testimonial-slider"

          }, {
            "type": "testimonial-slider"

          }
        ] 
      }
    ]
  }
{% endschema %}