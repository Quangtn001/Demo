{{ 'section-category-list.css' | asset_url | stylesheet_tag }}


<section class="section-{{ section.id }}-padding" style="margin-bottom: 100px;  padding-top:{{ section.settings.padding_top }}px ; padding-bottom:{{ section.settings.padding_bottom }}px" >
  <div class="banner_container">
      {% for block in section.blocks %}
        {% assign banner_index = forloop.index %}
        <div class="banner_content_{{ banner_index }}">
          {% if banner_index == 1 %}
            {% if block.settings.image != blank %}
              <div class="banner_image">
                <img src="{{ block.settings.image | img_url: '' }}" alt="">
              </div>
            {% else %}
              {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
        <!-- Banner Text --> 
            <div class="banner--info">
              <div class="table-banner">
                <div class="table-cell-banner">
                  <div class="title"  style="color: {{ block.settings.color_text_1 }};font-size: {{ block.settings.description_size_1 }}px;">{{ block.settings.text_1 }}</div>
                  {% if block.settings.title_1 != blank %}
                    <div class="heading" style="color: {{ block.settings.color_text_1 }};font-size: {{ block.settings.heading_size_1 }}px;">
                      {{ block.settings.title_1 | escape }}
                    </div>
                  {% endif %}
                  {% if block.settings.button_link_1 != blank and block.settings.button_label_1 != blank %}
                  <a href="{{ block.settings.button_link_1 }}" class="btn-bg-white" style="color: {{ block.settings.color_btn_text_1 }}; background: {{ block.settings.color_btn_bg_1 }}">
                    {{ block.settings.button_label_1 | escape }}
                  </a>
                {% endif %}
                </div>
              </div>
            </div>
          {% endif %}
          {% if banner_index == 2 or banner_index==3 %}
            {% if block.settings.image != blank %}
              <div class="banner_image">
                <img src="{{ block.settings.image | img_url: '' }}" alt="">
              </div>
            {% else %}
              {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            <div class="banner--info banner--info-bottom">
              <div class="title"  style="color: {{ block.settings.color_text_1 }};font-size: {{ block.settings.description_size_1 }}px;">{{ block.settings.text_1 }}</div>
                {% if block.settings.title_1 != blank %}
                  <div class="heading"  style="color: {{ block.settings.color_text_1 }};font-size: {{ block.settings.heading_size_1 }}px;">
                    {{ block.settings.title_1 | escape }}
                  </div>
                {% endif %}
                {% if block.settings.button_link_1 != blank and block.settings.button_label_1 != blank %}
                <a href="{{ block.settings.button_link_1 }}" class="btn-bg-white" style="color: {{ block.settings.color_btn_text_1 }}; background: {{ block.settings.color_btn_bg_1 }}">
                  {{ block.settings.button_label_1 | escape }}
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
  </div>
  </div>
</section>


{% schema %}
  {
    "name": "Category-List",
    "tag": "section",
    "class": "section",
    
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image-1",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Cover image"
          },
          {
            "type": "text",
            "id": "title_1",
            "label": "Heading",
            "default": "Heading"
          },
          {
            "type": "range",
            "id": "heading_size_1",
            "label": "Heading size",
            "min": 16,
            "max": 100,
            "default": 75,
            "step": 1
          },
          {
            "type": "richtext",
            "id": "text_1",
            "label": "Description",
            "default": "<p>Discription</p>"
          }, {
            "type": "range",
            "id": "description_size_1",
            "label": "Description size",
            "min": 12,
            "max": 24,
            "default": 18,
            "step": 1
          }, {
            "type": "color",
            "id": "color_text_1",
            "label": "Text color",
            "default": "#ffffff"
          }, {
            "type": "text",
            "id": "button_label_1",
            "label": "Button label"
          }, {
            "type": "url",
            "id": "button_link_1",
            "label": "Button link"

          }, {
            "type": "color",
            "id": "color_btn_bg_1",
            "label": "Background button color",
            "default": "#ffffff"

          }, {
            "type": "color",
            "id": "color_btn_text_1",
            "label": "Button text color",
            "default": "#000000"
          }
        ]
      }
    ],
    "max_blocks": 3,
    "presets": [
      {
        "name": "Banner Image",
        "blocks": [
          {
            "type": "image"
          }, {
            "type": "image"
          }, {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}