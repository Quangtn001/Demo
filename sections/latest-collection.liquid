{{ 'latest-collection.css' | asset_url | stylesheet_tag }}


  
<div class="color-{{ section.settings.color_scheme }} gradient" style="padding-top: {{ section.settings.padding_top }}px;padding-bottom: {{ section.settings.padding_bottom }}px">
  <div class="page-width">
    <h2 class="latest-col__header" style="font-size:{{ section.settings.heading_size }}px !important">{{ section.settings.title }}</h2>
    <div class="latest-col__container">
    {% for block in section.blocks %}
      {% assign collections = block.settings.collection %}
      
      <div class="latest-col__content">
        <div class="latest-col__img">
          {% if collections != blank %}
           <a href="{{ collections.url }}"> <img src="{{ collections.image | img_url: '' }}" alt=""></a>
         {%  else %}
          <div class="card__media">
            {{ "collection-apparel-1" | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
        </div>
        <div class="latest-col__info">
          <a class="btn-collection" href="{{ collections.url }}">{{ collections.title }}</a>
        </div>
      </div>
    {% endfor %}
     
    </div>
  </div>
</div>




{% schema %}
  {
    "name": "Latest Collection",
    "tag": "section",
    "class": "section",
    "settings": [
      {
      "type": "inline_richtext",
      "id": "title",
      "default": "Latest Collection",
      "label": "Heading"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 64,
      "unit": "px",
      "label": "Heading size",
      "default": 36
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "background-1"
    },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom",
        "default": 36
      }
    ],
    "blocks": [
    {
      "type": "latest_collection",
      "name": "Latest collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select collection"
        }
      ]
    }
  ],
    "presets": [
      {
        "name": "Latest collection",
        "blocks": [
          {
            "type": "latest_collection"
          }, {
            "type": "latest_collection"

          }, {
            "type": "latest_collection"

          }
        ] 
      }
    ]
  }
{% endschema %}